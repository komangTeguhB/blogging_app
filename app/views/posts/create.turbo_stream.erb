<%= turbo_stream.append :posts do %>
  <%= turbo_frame_tag @post do %>
      <%= link_to @post do %>
        <strong><%= @post.title %></strong>
      <% end %>
      <p><%= @post.content %></p>
    <% end %>
<% end %>


<%= turbo_stream.replace :new_post do %>
  <%= turbo_frame_tag :new_post do %>
    <%= link_to "New Post", new_post_path %>
  <%- end %>
<%- end %>
